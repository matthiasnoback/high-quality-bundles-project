{% extends "::base.html.twig" %}

{% block body %}
    <h1>Patients</h1>
    <p><a href="{{ path('patient_create') }}" class="btn btn-success">Create patient</a></p>

    <form action="{{ path('patient_find_by_last_name') }}" method="get" class="form-inline">
        <div class="form-group">
        <label for="lastName">Find by last name: </label>
        <input type="text" id="lastName" name="lastName" value="{{ app.request.query.get('lastName') }}" class="form-control"/>
        <button type="submit" class="btn btn-default">Find</button>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Sex</th>
            <th>Has arrived?</th>
        </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>
                    <a href="{{ path('patient_details', { id: patient.id }) }}">{{ patient.name }}</a></td>
                <td>{{ patient.sex }}</td>
                <td>{{ patient.hasArrived }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No matches</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
